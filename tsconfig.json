{
  "compilerOptions": {
    "target": "ESNEXT",
    "module": "CommonJS",
    "declaration": true,
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "strictNullChecks": true,
    "noUncheckedIndexedAccess": true,
    "esModuleInterop": true,
    "pretty": true,
    "skipLibCheck": false,
    "resolveJsonModule": true
  },
  "exclude": ["dist", "tests"]
}
